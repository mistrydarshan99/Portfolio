<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="data" type="me.tumur.portfolio.screens.profile.ProfileViewModel"/>
        <variable name="sharedData" type="me.tumur.portfolio.screens.MainViewModel"/>
    </data>

    <!-- Landscape mode -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_state_no_data_screen_landscape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:uiScreenEmpty="@{data.uiState}">

        <!-- Vertical screen divider -->
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_screen_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

        <!-- Empty vector drawable -->
        <androidx.appcompat.widget.AppCompatImageView
                style="@style/ForAccessibilty"
                android:id="@+id/iv_empty"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/guideline_screen_divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/cd_empty_icon"
                app:srcCompat="@drawable/ic_empty"/>

        <!-- Empty title -->
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenTitle"
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline_screen_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_empty_text"
                android:text="@{sharedData.emptyTitle}"
                tools:text="@sample/screens.json/screen/empty_title"/>

        <!-- Empty text description -->
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenText"
                android:id="@+id/tv_empty_text"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline_screen_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_empty_title"
                app:layout_constraintBottom_toTopOf="@+id/btn_retry"
                android:text="@{sharedData.emptyText}"
                tools:text="@sample/screens.json/screen/empty_text"/>

        <!-- Retry button to fetch data -->
        <com.google.android.material.button.MaterialButton
                style="@style/ScreenRetryButton"
                android:id="@+id/btn_retry"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toStartOf="@id/guideline_screen_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_empty_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cornerRadius="@dimen/_20sdp"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconSize="@dimen/_20sdp"
                android:text="@{sharedData.btnRetry}"
                tools:text="@sample/screens.json/screen/retry"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
