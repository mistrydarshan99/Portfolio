<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.activities.SplashActivity">

    <data>
        <import type="android.view.View"/>
        <variable name="model" type="me.tumur.portfolio.viewmodel.activities.SplashViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                style="@style/ForAccessibilty"
                android:id="@+id/iv_icon_one"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/iv_icon_two"
                android:contentDescription="@string/cd_icon_one"
                app:srcCompat="@drawable/ic_icon_one_placeholder_one"/>

        <androidx.appcompat.widget.AppCompatImageView
                style="@style/ForAccessibilty"
                android:id="@+id/iv_icon_two"
                android:visibility="@{safeUnbox(model.iconOne) ? View.VISIBLE : View.INVISIBLE}"
                tools:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_icon_one"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/cd_icon_two"
                app:srcCompat="@drawable/ic_icon_two"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
