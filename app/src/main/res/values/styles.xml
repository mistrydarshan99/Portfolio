<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorError">@color/colorError</item>
        <!-- Removing actionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorBottomMenuBackground</item>
        <item name="itemTextColor">@color/colorPrimaryText</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextStyle</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>

    <!-- Bottom Navigation Text Style-->
    <style name="BottomNavTextStyle">
        <item name="fontFamily">@font/google_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Drawer Header Text Style -->
    <style name="DrawerHeaderName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/google_bold</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Drawer Header Text Style -->
    <style name="DrawerHeaderTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/google_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Profile Header Text Style -->
    <style name="ProfileGreeting" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/google_bold</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- State Title Style -->
    <style name="ScreenTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/google_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- State Text Style -->
    <style name="ScreenText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/google_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
    </style>

    <!-- State Retry Button Style -->
    <style name="ScreenRetryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ScreenRetryButtonText</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
    </style>

    <!-- State Retry Button Style -->
    <style name="ScreenRetryButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/google_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- Profile Header Card Style -->
    <style name="ProfileCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">@dimen/dimen_20dp</item>
        <item name="android:strokeWidth">@dimen/_2sdp</item>
        <item name="android:strokeColor">@color/colorBackgroundSocialItem</item>
        <item name="cardElevation">@dimen/dimen_4dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>

    <!-- Profile theme. -->
    <style name="Border">
        <item name="android:background">@color/colorBorder</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <!-- Profile Header Text Style -->
    <style name="ProfileName" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/google_medium</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Profile Header Text Style -->
    <style name="ProfileTitle" parent="ProfileName">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <!-- Profile Header Button Style -->
    <style name="ProfileBtnMore" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/google_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>

    </style>

    <!-- Profile Header Text Style -->
    <style name="ProfileSummary" parent="ProfileName">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/google_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/_4sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Social Item Card Style -->
    <style name="SocialItemCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/dimen_0dp</item>
        <item name="android:strokeWidth">@dimen/_2sdp</item>
        <item name="android:strokeColor">@color/colorBackgroundSocialItem</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>

    <!-- Social Title Style -->
    <style name="SocialTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/google_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

    <!-- Social Text Style -->
    <style name="SocialText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/google_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <!-- Unimportant for accessibility -->
    <style name="UnImportantForAccessibilty">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <!-- Important for accessibility single elements -->
    <style name="ForAccessibilty">
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>

</resources>
